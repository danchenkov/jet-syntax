{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HTML Template (Jet)",
  "scopeName": "text.html.jet",
  "fileTypes": ["jet"],
  "patterns": [
    {
      "include": "text.html.basic"
    },
    {
      "include": "#jet-comment"
    },
    {
      "include": "#go-block"
    }
  ],
  "repository": {
    "string-double-quoted-jet": {
      "name": "string.quoted.double.jet",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.jet"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.jet"
        }
      },
      "patterns": [
        {
          "name": "constant.character.escape.jet",
          "match": "\\\\\""
        }
      ]
    },
    "string-single-quoted-jet": {
      "name": "string.quoted.single.jet",
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.jet"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.jet"
        }
      },
      "patterns": [
        {
          "name": "constant.character.escape.jet",
          "match": "\\\\'"
        }
      ]
    },
    "jet-comment": {
      "name": "comment.jet",
      "begin": "{\\*",
      "end": "\\*}",
      "captures": {
        "0": {
          "name": "punctuation.definition.block.comment.jet"
        }
      }
    },
    "go-block": {
      "name": "Embedded Go Code",
      "begin": "{{",
      "end": "}}",
      "patterns": [
        {
          "include": "source.go"
        }
      ]
    }
  }
}
