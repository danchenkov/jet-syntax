{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Jet Template",
    "scopeName": "text.html.jet",
    "fileTypes": ["jet"],
    "patterns": [
        { "include": "#frontmatterYAML" },
        { "include": "#jetBlock" },
        { "include": "text.html.basic" }
    ],
    "repository": {
        "frontmatterYAML": {
            "begin": "^---\\s*$",
            "end": "^---\\s*$",
            "name": "meta.embedded.block.frontmatter",
            "contentName": "source.yaml",
            "patterns": [
                { "include": "source.yaml" }
            ]
        },
        "jetBlock": {
            "begin": "\\{\\{",
            "beginCaptures": {
                "0": { "name": "punctuation.section.embedded.begin.jet" }
            },
            "end": "\\}\\}",
            "endCaptures": {
                "0": { "name": "punctuation.section.embedded.end.jet" }
            },
            "name": "source.jet.embedded",
            "patterns": [
                { "include": "#controlBlock" },
                { "include": "#expressions" },
                { "include": "#quotedStrings" }
            ]
        },
        "controlBlock": {
            "patterns": [
                {
                    "name": "keyword.control.jet",
                    "match": "\\b(if|else if|else|end|range|block|yield|extends|include|import)\\b"
                }
            ]
        },
        "expressions": {
            "patterns": [
                {
                    "name": "variable.assignment.jet",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\s*[:=])"
                },
                {
                    "name": "support.function.jet",
                    "match": "\\b(T|Lookup|isset|len|html|url|safeHtml|safeJs|repeat|replace|raw)\\b(?=\\()"
                },
                {
                    "name": "variable.other.jet",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "quotedStrings": {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double.jet",
            "patterns": [
                {
                    "name": "constant.character.escape.jet",
                    "match": "\\\\."
                }
            ]
        }
    }
}
